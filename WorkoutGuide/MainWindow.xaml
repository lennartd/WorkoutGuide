                                                    </DataTemplate>
                                                </TreeViewItem.HeaderTemplate>
                                            </TreeViewItem>
                                            <TreeViewItem Style="{StaticResource CheckBoxTreeviewItemHeader}">
                                                <TreeViewItem.HeaderTemplate>
                                                    <DataTemplate>
                                                        <StackPanel DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeViewItem}, Path=DataContext}" Orientation="Horizontal">
                                                            <CheckBox Margin="2" 
                                                        IsChecked="{Binding SearchCaracteristics.SearchFeaturesCategories.CategoriesSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                        Cursor="Hand">
                                                                <i:Interaction.Triggers>
                                                                    <i:EventTrigger EventName="Checked">
                                                                        <i:InvokeCommandAction Command="{Binding AdjustSearchResultsCommand}"></i:InvokeCommandAction>
                                                                    </i:EventTrigger>
                                                                    <i:EventTrigger EventName="Unchecked">
                                                                        <i:InvokeCommandAction Command="{Binding AdjustSearchResultsCommand}"></i:InvokeCommandAction>
                                                                    </i:EventTrigger>
                                                                </i:Interaction.Triggers>
                                                            </CheckBox>
                                                            <TextBlock Text="Schnelligkeit"></TextBlock>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </TreeViewItem.HeaderTemplate>
                                            </TreeViewItem>
                                        </TreeView>
                                        <Label Style="{StaticResource SubHeadings}">Schwierigkeit:</Label>
                                        <ListBox Margin="10" Background="#FFFBFBFB">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged">
                                                    <i:InvokeCommandAction Command="{Binding AdjustSearchResultsCommand}"></i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <ListBoxItem Content="Einfach" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDifficulty.DifficultyEasy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="Mittel" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDifficulty.DifficlutyIntermediate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="Schwer" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDifficulty.DifficultyDifficult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="Egal" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDifficulty.DifficultyDoesntMatter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                        </ListBox>
                                        <Label Style="{StaticResource SubHeadings}">Dauer:</Label>
                                        <ListBox Margin="10" Background="#FFFBFBFB">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged">
                                                    <i:InvokeCommandAction Command="{Binding AdjustSearchResultsCommand}"></i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <ListBoxItem Content="0-10 min" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDuration.DurationZeroToTen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="10-30 min" Style="{StaticResource RadioButtonListBox}"
                                              IsSelected="{Binding SearchCaracteristics.SearchFeaturesDuration.DurationTenToThirty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="30+ min" Style="{StaticResource RadioButtonListBox}"
                                              IsSelected="{Binding SearchCaracteristics.SearchFeaturesDuration.DurationOverThirty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="Egal" Style="{StaticResource RadioButtonListBox}"
                                              IsSelected="{Binding SearchCaracteristics.SearchFeaturesDuration.DurationDoesntMatter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                        </ListBox>
                                        <Label Style="{StaticResource SubHeadings}">Hinzugefügt:</Label>
                                        <ListBox Margin="10" Background="#FFFBFBFB">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged">
                                                    <i:InvokeCommandAction Command="{Binding AdjustSearchResultsCommand}"></i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <ListBoxItem Content="Heute" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDateAdded.DateAddedToday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="Gestern" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDateAdded.DateAddedYesterday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="Letzte Woche" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDateAdded.DateAddedLastWeek, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="Letzten Monat" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDateAdded.DateAddedLastMonth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                            <ListBoxItem Content="Irgendwann" Style="{StaticResource RadioButtonListBox}"
                                             IsSelected="{Binding SearchCaracteristics.SearchFeaturesDateAdded.DateAddedDoesntMatter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                        </ListBox>
                                        <Button Margin="10"
                                                Command="{Binding ResetSearchCommand}">Zurücksetzen</Button>
                                    </StackPanel>
                                </Viewbox>
                            </Border>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="15*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="5,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Border  BorderThickness="0,0,0,2" BorderBrush="Black" Grid.ColumnSpan="2">
                                    <Viewbox HorizontalAlignment="Left">
                                        <Label Style="{StaticResource Headings}">Suchergebnisse:</Label>
                                    </Viewbox>
                                </Border>
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="5">
                                    <Label Style="{StaticResource SubHeadings}"
                                           VerticalAlignment="Center">Sortieren nach:</Label>
                                    <ComboBox x:Name="SortValuesComboBox"
                                              SelectedIndex="0"
                                              VerticalContentAlignment="Center"
                                              HorizontalContentAlignment="Center"
                                              Margin="5"
                                              FontSize="15"
                                              SelectionChanged="SortSearchedVideos">
                                        <ComboBox.Items>
                                            <ComboBoxItem Style="{StaticResource ComboBoxItem}">Titel</ComboBoxItem>
                                            <ComboBoxItem Style="{StaticResource ComboBoxItem}">Wertung</ComboBoxItem>
                                            <ComboBoxItem Style="{StaticResource ComboBoxItem}">Dauer</ComboBoxItem>
                                            <ComboBoxItem Style="{StaticResource ComboBoxItem}">Hinzugefügt</ComboBoxItem>
                                        </ComboBox.Items>
                                    </ComboBox>
                                    <ToggleButton x:Name="SortUpDownToggleButton"
                                                  Style="{StaticResource UpDownToggleButton}"
                                                  IsChecked="True"
                                                  Click="SortSearchedVideos"></ToggleButton>
                                </StackPanel>
                            </Grid>
                            

                            <Grid Grid.Row="1" Margin="5">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                    <ItemsControl x:Name="SearchedVideosItemsControl"
                                                  ItemsSource="{Binding Source={StaticResource SortSearchedVideos}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                                        <ColumnDefinition Width="9*"></ColumnDefinition>
                                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <Grid Grid.Column="0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"></RowDefinition>
                                                            <RowDefinition Height="30"></RowDefinition>
                                                        </Grid.RowDefinitions>

                                                        <Button Grid.Row="0" Name="ButtonVideoImage"    
                                                            Command="{Binding OpenLinkCommand}">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Image Source="{Binding VideoImage}"
                                                                    Cursor="Hand"></Image>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>

                                                        <Grid Grid.Row="1" Margin="0,3,0,0" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>

                                                            <local:RatingControl HorizontalAlignment="Left" VerticalAlignment="Top"
                                                                                 Tag="{Binding VideoRating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                            </local:RatingControl>
                                                            <Label Grid.Column="1" Content="{Binding VideoDuration, Converter={StaticResource TimeConv}}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Top"></Label>
                                                        </Grid>

                                                    </Grid>

                                                    <Viewbox Grid.Column="1" VerticalAlignment="Top">
                                                        <StackPanel  Orientation="Vertical" Margin="5"
                                                         Width="500">
                                                            <Button Name="ButtonVideoTitle" Command="{Binding OpenLinkCommand}"
                                                        Style="{StaticResource HyperlinkLikeButton}">
                                                                <TextBlock Text="{Binding VideoTitle}"
                                                       FontWeight="Bold" FontSize="15"
                                                           TextWrapping="Wrap"></TextBlock>
                                                            </Button>

                                                            <TextBlock Text="{Binding VideoAuthor, StringFormat='von {0}'}"
                                                           FontSize="13" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>
                                                            <TextBlock Text="{Binding VideoDescription, Converter={StaticResource TextTrimmingConv}}"
                                                       FontStyle="Italic" TextWrapping="Wrap">
                                                                <TextBlock.ToolTip>
                                                                    <ToolTip>
                                                                        <TextBlock Text="{Binding VideoDescription}"></TextBlock>
                                                                    </ToolTip>
                                                                </TextBlock.ToolTip>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Viewbox>

                                                    <Grid Grid.Column="2">
                                                        <Button Margin="2"
                                                                HorizontalAlignment="Center"
                                                                Background="#FFFBFBFB"
                                                                FontSize="20"
                                                                VerticalAlignment="Top">
                                                            <Button.ToolTip>
                                                                <ToolTip>
                                                                    <TextBlock>Zusätzliche Optionen</TextBlock>
                                                                </ToolTip>
                                                            </Button.ToolTip>
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Label HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"
                                                                               FontSize="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=FontSize}">...</Label>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                            <Button.Triggers>
                                                                <EventTrigger RoutedEvent="Button.MouseEnter">
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="FontSize"
                                                                                             To="30"
                                                                                             Duration="0:0:0.3"></DoubleAnimation>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </EventTrigger>
                                                                <EventTrigger RoutedEvent="Button.MouseLeave">
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="FontSize"
                                                                                             To="20"
                                                                                             Duration="0:0:0.3"></DoubleAnimation>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </EventTrigger>
                                                            </Button.Triggers>
                                                            <Button.Style>
                                                                <Style TargetType="{x:Type Button}">
                                                                    <Style.Triggers>
                                                                        <EventTrigger RoutedEvent="Click">
                                                                            <EventTrigger.Actions>
                                                                                <BeginStoryboard>
                                                                                    <Storyboard>
                                                                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                                                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                                                                        </BooleanAnimationUsingKeyFrames>
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </EventTrigger.Actions>
                                                                        </EventTrigger>
                                                                    </Style.Triggers>
                                                                    <Setter Property="ContextMenu">
                                                                        <Setter.Value>
                                                                            <ContextMenu>
                                                                                <MenuItem Header="Zu Workout hinzufügen"
                                                                                          Command="{Binding OpenAddVideoToWorkoutWindowCommand}">
                                                                                    <MenuItem.ToolTip>
                                                                                        <ToolTip>
                                                                                            <StackPanel>
                                                                                                <TextBlock FontWeight="Bold">Zu Workout hinzufügen</TextBlock>
                                                                                                <TextBlock>Fügt das ausgewählte Video zu einem Workout hinzu.</TextBlock>
                                                                                            </StackPanel>
                                                                                        </ToolTip>
                                                                                    </MenuItem.ToolTip>
                                                                                    <MenuItem.Icon>
                                                                                        <Image Source="Images/plus.ico"
                                                                                               Width="20"
                                                                                               Height="20"></Image>
                                                                                    </MenuItem.Icon>
                                                                                </MenuItem>
                                                                                <MenuItem Header="Video löschen"
                                                                                          Command="{Binding DeleteVideoCommand}">
                                                                                    <MenuItem.ToolTip>
                                                                                        <ToolTip>
                                                                                            <StackPanel>
                                                                                                <TextBlock FontWeight="Bold">Löschen</TextBlock>
                                                                                                <TextBlock>Löscht das ausgewählte Video unwideruflich.</TextBlock>
                                                                                            </StackPanel>
                                                                                        </ToolTip>
                                                                                    </MenuItem.ToolTip>
                                                                                    <MenuItem.Icon>
                                                                                        <Image Source="Images/delete.ico"
                                                                                               Width="20"
                                                                                               Height="20"></Image>
                                                                                    </MenuItem.Icon>
                                                                                </MenuItem>
                                                                            </ContextMenu>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Video hinzufügen">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Style="{StaticResource SubHeadings}"
                                   VerticalAlignment="Center">Link:</Label>
                            <TextBox Grid.Column="1" Height="30" Margin="5"
                                     VerticalAlignment="Center" FontSize="15"
                                     Text="{Binding NewVideo.VideoUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <i:InvokeCommandAction Command="{Binding AddVideoPreviewCommand}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                        </Grid>
                        <Label Grid.Row="1" Style="{StaticResource SubHeadings}"
                               VerticalAlignment="Center" 
                               Visibility="{Binding NewVideo.VideoUrlOk, Converter={StaticResource VideoUrlVisibilityConv}}">Vorschau:</Label>
                    </Grid>
                    <Grid Grid.Row="1" Margin="10" Visibility="{Binding NewVideo.VideoUrlOk, Converter={StaticResource VideoUrlVisibilityConv}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Button Command="{Binding NewVideo.OpenLinkCommand}"
                                    VerticalAlignment="Top">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Image Source="{Binding NewVideo.VideoImage}"
                                                       Cursor="Hand"></Image>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <Viewbox Grid.Column="1" VerticalAlignment="Top">
                            <StackPanel  Orientation="Vertical" Margin="5"
                                                         Width="500">
                                <Button Command="{Binding NewVideo.OpenLinkCommand}"
                                                        Style="{StaticResource HyperlinkLikeButton}">
                                    <TextBlock Text="{Binding NewVideo.VideoTitle}"
                                                       FontWeight="Bold" FontSize="15"
                                                           TextWrapping="Wrap"></TextBlock>
                                </Button>

                                <TextBlock Text="{Binding NewVideo.VideoAuthor, StringFormat='von {0}'}"
                                                           FontSize="13" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>
                                <TextBlock Text="{Binding NewVideo.VideoDescription, Converter={StaticResource TextTrimmingConv}}"
                                                       FontStyle="Italic" TextWrapping="Wrap">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="{Binding NewVideo.VideoDescription}"></TextBlock>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </StackPanel>
                        </Viewbox>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="3*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Style="{StaticResource SubHeadings}"
                               Visibility="{Binding NewVideo.VideoUrlOk, Converter={StaticResource VideoUrlVisibilityConv}}">Eigenschaften festlegen:</Label>
                        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="10,0"
                                    Visibility="{Binding NewVideo.VideoUrlOk, Converter={StaticResource VideoUrlVisibilityConv}}">
                            <ListBox Background="#FFFBFBFB">
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Brust</ListBoxItem>
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Bauch</ListBoxItem>
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Bizeps</ListBoxItem>
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Trizeps</ListBoxItem>
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Schulter</ListBoxItem>
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Rücken</ListBoxItem>
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Bein</ListBoxItem>
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Ausdauer</ListBoxItem>
                                <ListBoxItem Style="{StaticResource SimpleListboxItem}">Schnelligkeit</ListBoxItem>
                            </ListBox>
                            <ListBox Background="#FFFBFBFB">
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesChest, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesAbs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesBiceps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesTriceps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesShoulder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesBack, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesLeg, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesCardio, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                                <ListBoxItem Style="{StaticResource CheckBoxListboxItem}" 
                                             Tag="{Binding NewVideo.VideoCategories.CategoriesSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ListBoxItem>
                            </ListBox>
                            <StackPanel Width="350">
                                <StackPanel Orientation="Horizontal">
                                    <Label VerticalAlignment="Center" Margin="10,10,0,10" FontSize="15">Schwierigkeit:</Label>
                                    <ComboBox Margin="10" Width="150" VerticalAlignment="Center" FontSize="15">
                                        <ComboBoxItem IsSelected="{Binding NewVideo.VideoDifficulty.DifficultyEasy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">Einfach</ComboBoxItem>
                                        <ComboBoxItem IsSelected="{Binding NewVideo.VideoDifficulty.DifficlutyIntermediate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">Mittel</ComboBoxItem>
                                        <ComboBoxItem IsSelected="{Binding NewVideo.VideoDifficulty.DifficultyDifficult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">Schwer</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label VerticalAlignment="Center" Margin="10,10,0,10" FontSize="15">Wertung:</Label>
                                    <local:RatingControl HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Height="20" Width="200" Margin="10"
                                                         Tag="{Binding NewVideo.VideoRating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></local:RatingControl>
                                </StackPanel>

                            </StackPanel>

                        </StackPanel>
                        <Button Grid.Column="1" Grid.Row="1" Width="150" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                Margin="10" Command="{Binding AddVideoCommand}" Cursor="Hand">Video hinzufügen</Button>
                    </Grid>


                    <Rectangle Grid.Row="3" Fill="#FF999999" Opacity="0.7"></Rectangle>
                </Grid>
            </TabItem>
            <TabItem Header="Workouts">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Grid.Column="0" Grid.Row="0"
                            Grid.RowSpan="2"
                            BorderBrush="Black"
                            BorderThickness="0,0,2,0">
                    </Border>
                    <Grid Grid.Column="0" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                               Style="{StaticResource SubHeadings}"
                               VerticalAlignment="Center">Workouts</Label>
                        <Button Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="0,12,10,10"
                                FontWeight="Bold"
                                FontSize="20"
                                HorizontalContentAlignment="Center"
                                Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                                Background="#FFFBFBFB"
                                Command="{Binding OpenAddNewWorkoutWindowCommand}"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border x:Name="PlusButtonBorder" BorderBrush="Black"
                                            BorderThickness="1" >
                                        <Label HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=FontSize}">+</Label>
                                       <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsEnabled" Value="True"></Condition>
                                                            <Condition Property="IsMouseOver" Value="True"></Condition>
                                                        </MultiTrigger.Conditions>
                                                        <MultiTrigger.Setters>
                                                            <Setter Property="Background" Value="LightGreen"></Setter>
                                                        </MultiTrigger.Setters>
                                                    </MultiTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
   
                                </ControlTemplate>
                            </Button.Template>
                            
                            <Button.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold">Workout hinzufügen</TextBlock>
                                        <TextBlock>Fügt der Liste ein neues Workout hinzu.</TextBlock>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                            
                        </Button>
                    </Grid>
                    <Viewbox Grid.Column="0" Grid.Row="1"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Stretch="Uniform">
                        <ListBox
                             Margin="10"
                             Background="#FFFBFBFB"
                             ItemsSource="{Binding AllWorkouts.Workouts}"
                             SelectionMode="Single"
                             SelectedItem="{Binding SelectedWorkout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                                            BorderThickness="0,0,0,1"
                                            Width="300">
                                        <StackPanel Orientation="Vertical"
                                                VerticalAlignment="Center">
                                            <Label Content="{Binding WorkoutTitle}"
                                               FontWeight="Bold"
                                               FontSize="16"></Label>
                                            <TextBlock Margin="10"
                                                  FontStyle="Italic"
                                                  FontSize="12"
                                                  TextWrapping="Wrap"
                                       Text="{Binding WorkoutDescription}"></TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Viewbox>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="70"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Viewbox Grid.Column="0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top">
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        Margin="0,2,0,0">
                                <Label Content="{Binding SelectedWorkout.WorkoutTitle}"
                               FontWeight="Bold"
                               FontSize="16"></Label>
                                <TextBlock Margin="10"
                                   FontStyle="Italic"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Text="{Binding SelectedWorkout.WorkoutDescription}"></TextBlock>
                            </StackPanel>
                        </Viewbox>
                        <Grid Grid.Column="1">
                            <Button HorizontalAlignment="Center"
                                    Cursor="Hand"
                                    Visibility="{Binding SelectedWorkout, Converter={StaticResource SelectedWorkoutVisibilityConv}}"
                                    Command="{Binding DeleteSelectedWorkoutCommand}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Image Source="Images/delete.ico"
                                                   Width="20"></Image>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold">Workout löschen</TextBlock>
                                            <TextBlock>Löscht das ausgewählte Workout.</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1"
                          Margin="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <ItemsControl ItemsSource="{Binding SelectedWorkout.WorkoutVideos.Videos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="30"></RowDefinition>
                                                </Grid.RowDefinitions>

                                                <Button Grid.Row="0" Name="ButtonVideoImage"    
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=DataContext.ResetSearchCommand}">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Image Source="{Binding VideoImage}"
                                                       Cursor="Hand"></Image>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>

                                                <Grid Grid.Row="1" Margin="0,3,0,0" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>

                                                    <local:RatingControl HorizontalAlignment="Left" VerticalAlignment="Top"
                                                                         Tag="{Binding VideoRating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></local:RatingControl>
                                                    <Label Grid.Column="1" Content="{Binding VideoDuration, Converter={StaticResource TimeConv}}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Top"></Label>
                                                </Grid>

                                            </Grid>

                                            <Viewbox Grid.Column="1" VerticalAlignment="Top">
                                                <StackPanel  Orientation="Vertical" Margin="5"
                                                         Width="500">
                                                    <Button Name="ButtonVideoTitle" Command="{Binding OpenLinkCommand}"
                                                        Style="{StaticResource HyperlinkLikeButton}">
                                                        <TextBlock Text="{Binding VideoTitle}"
                                                       FontWeight="Bold" FontSize="15"
                                                           TextWrapping="Wrap"></TextBlock>
                                                    </Button>

                                                    <TextBlock Text="{Binding VideoAuthor, StringFormat='von {0}'}"
                                                           FontSize="13" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>
                                                    <TextBlock Text="{Binding VideoDescription, Converter={StaticResource TextTrimmingConv}}"
                                                       FontStyle="Italic" TextWrapping="Wrap">
                                                        <TextBlock.ToolTip>
                                                            <ToolTip>
                                                                <TextBlock Text="{Binding VideoDescription}"></TextBlock>
                                                            </ToolTip>
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Viewbox>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</Window>

